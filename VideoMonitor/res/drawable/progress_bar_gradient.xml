<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background"> <!-- 进度条背景色 -->
        <shape>
            <gradient
                android:angle="0"
                android:centerY="0.75"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#c90000"
                    android:startColor="#EE6363" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress"> <!-- 进度条上的颜色 -->
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerY="0.75"
                    android:startColor="#33CC00"
                    android:centerColor="#FFC125"
                    android:endColor="#EE6363" />
            </shape>
        </clip>
    </item>

</layer-list>